@model Spendly.Web.Contracts.Expenses.PagedExpenseResult

@{
    ViewData["Title"] = "My Expenses";
    var currentCategory = ViewBag.Category as string;
    var currentPage = (int)(ViewBag.CurrentPage ?? 1);
}

<div class="container mt-4">
    <h2 class="mb-4"><i class="bi bi-wallet2"></i> My Expenses</h2>

    @* Error / success alerts *@
    @if (TempData["Error"] is string errorMsg)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@errorMsg
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Success"] is string successMsg)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@successMsg
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @* ── Filter bar ── *@
    <div class="card mb-3 border-0 bg-light">
        <div class="card-body py-2">
            <form asp-action="Index" method="get" class="row g-2 align-items-center">
                <div class="col-auto">
                    <label class="col-form-label fw-semibold">Category</label>
                </div>
                <div class="col-auto">
                    <input type="text" name="category" value="@currentCategory"
                           class="form-control form-control-sm"
                           placeholder="e.g. Food, Transport…" />
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-sm btn-primary">
                        <i class="bi bi-search"></i> Filter
                    </button>
                    @if (!string.IsNullOrEmpty(currentCategory))
                    {
                        <a asp-action="Index" class="btn btn-sm btn-outline-secondary ms-1">
                            <i class="bi bi-x-lg"></i> Clear
                        </a>
                    }
                </div>
                @if (!string.IsNullOrEmpty(currentCategory))
                {
                    <div class="col-auto">
                        <span class="badge bg-primary">@currentCategory</span>
                    </div>
                }
            </form>
        </div>
    </div>

    @* ── Add new expense ── *@
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <i class="bi bi-plus-circle"></i> Add New Expense
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div class="row g-3 align-items-end">
                    <div class="col-md-3">
                        <label class="form-label">Description</label>
                        <input name="Description" class="form-control"
                               placeholder="e.g. Supermarket" required maxlength="200" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Amount ($)</label>
                        <input name="Amount" type="number" step="0.01" min="0.01"
                               class="form-control" placeholder="0.00" required />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Category</label>
                        <input name="Category" class="form-control"
                               placeholder="e.g. Food" required maxlength="100" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Date</label>
                        <input name="Date" type="date" class="form-control" required
                               max="@DateTime.Today.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-plus-lg"></i> Add
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @* ── Expense list ── *@
    @if (Model.Items.Any())
    {
        <div class="card shadow-sm">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="bi bi-list-ul"></i> Expense List</span>
                <small class="text-muted">
                    Showing
                    @((currentPage - 1) * Model.PageSize + 1)–@(Math.Min(currentPage * Model.PageSize, Model.TotalCount))
                    of @Model.TotalCount
                </small>
            </div>

            <div class="card-body p-0">
                <table class="table table-striped table-hover mb-0 align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Description</th>
                            <th>Amount</th>
                            <th>Category</th>
                            <th>Date</th>
                            <th class="text-center" style="width:110px">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var e in Model.Items)
                        {
                            <tr>
                                <td>@e.Description</td>
                                <td class="text-success fw-semibold">$@e.Amount.ToString("N2")</td>
                                <td><span class="badge bg-secondary">@e.Category</span></td>
                                <td>@e.Date.ToString("MMM dd, yyyy")</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@e.Id"
                                       class="btn btn-sm btn-outline-primary me-1"
                                       title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@e.Id"
                                          method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                                title="Delete"
                                                onclick="return confirm('Delete this expense?');">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @* ── Pagination ── *@
            @if (Model.TotalPages > 1)
            {
                <div class="card-footer bg-white">
                    <nav aria-label="Expenses pagination">
                        <ul class="pagination pagination-sm mb-0 justify-content-center">

                            <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-page="@(currentPage - 1)"
                                   asp-route-category="@currentCategory"
                                   tabindex="@(!Model.HasPreviousPage ? -1 : 0)">
                                    &laquo;
                                </a>
                            </li>

                            @{
                                int start = Math.Max(1, currentPage - 2);
                                int end = Math.Min(Model.TotalPages, currentPage + 2);
                            }
                            @for (int p = start; p <= end; p++)
                            {
                                <li class="page-item @(p == currentPage ? "active" : "")">
                                    <a class="page-link"
                                       asp-action="Index"
                                       asp-route-page="@p"
                                       asp-route-category="@currentCategory">@p</a>
                                </li>
                            }

                            <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-page="@(currentPage + 1)"
                                   asp-route-category="@currentCategory"
                                   tabindex="@(!Model.HasNextPage ? -1 : 0)">
                                    &raquo;
                                </a>
                            </li>

                        </ul>
                    </nav>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            @if (!string.IsNullOrEmpty(currentCategory))
            {
                <text>No expenses found for category <strong>@currentCategory</strong>.</text>
            }
            else
            {
                <text>No expenses yet. Add your first one above!</text>
            }
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}